@using Entities.ViewModels.UserController
@model AddUserViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="kt-portlet kt-portlet--mobile">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Add User
                        </h3>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <form asp-route="Add" method="post">
                        <div class="kt-section__body">
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Name</label>
                                <div class="col-lg-9 col-xl-9">
                                    <input class="form-control" asp-for="AddUserDto.Name" type="text">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Surname</label>
                                <div class="col-lg-9 col-xl-9">
                                    <input class="form-control" asp-for="AddUserDto.Surname" type="text" aria-invalid="false">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Username</label>
                                <div class="col-lg-9 col-xl-9">
                                    <input class="form-control" asp-for="AddUserDto.Username" type="text">
                                    @Html.ValidationMessageFor(m => m.AddUserDto.Username, null, new { @class = "form-control-feedback text-danger" })


                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Password</label>
                                <div class="col-lg-9 col-xl-9">
                                    <input class="form-control" asp-for="AddUserDto.Password" type="password">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-xl-3 col-lg-3 col-form-label">Confirm Password</label>
                                <div class="col-lg-9 col-xl-9">
                                    <input class="form-control" asp-for="AddUserDto.ConfirmPassword" type="password">
                                </div>
                            </div>
                        </div>
                        <div class="kt-portlet__foot kt-portlet__foot--fit py-2">
                            <div class="kt-form__actions py-2">
                                <button id="btnSubmit" type="submit" class="btn btn-success">Add User</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>