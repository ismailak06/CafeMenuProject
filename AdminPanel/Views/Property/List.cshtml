@using Entities.ViewModels.PropertyController
@model ListPropertyViewModel
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="kt-subheader   kt-grid__item" id="kt_subheader">
    <div class="kt-container  kt-container--fluid ">
        <div class="kt-subheader__main">
            <h3 class="kt-subheader__title">
                Properties
            </h3>
        </div>
    </div>
</div>

<div class="kt-portlet kt-portlet--mobile">
    <div class="kt-portlet__head">
        <div class="kt-portlet__head-label">
            <h3 class="kt-portlet__head-title">
                Property List
            </h3>
        </div>
        <div class="kt-portlet__head-toolbar">
            <div class="kt-portlet__head-actions">
                <a href="@Url.Action("Add", "Property")" class="btn btn-bold btn-label-success btn-sm">
                    <i class="flaticon2-plus"></i>
                    New Property
                </a>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Key</th>
                        <th>Value</th>
                        <th>Options</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var property in Model.PropertiesDtos)
                    {
                        <tr>
                            <td>
                                @property.Key
                            </td>
                            <td>
                                @property.Value
                            </td>
                            <td>
                                <a href="@Url.Action("Edit","Property",new { propertyId=property.Id})" class="btn btn-pill btn-success btn-sm"><i class="fa fa-information"></i>&nbsp; Edit</a>
                            </td>
                            <td>
                                <a href="@Url.Action("Delete",new { propertyId=property.Id})" class="btn btn-pill btn-secondary btn-sm"><i class="fa fa-trash"></i>&nbsp; Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>