@using Entities.ViewModels.PropertyController
@model AddPropertyViewModel
@{
    ViewData["Title"] = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-6">
            <div class="kt-portlet kt-portlet--mobile">
                <div class="kt-portlet__head">
                    <div class="kt-portlet__head-label">
                        <h3 class="kt-portlet__head-title">
                            Add Property
                        </h3>
                    </div>
                </div>
                <div class="kt-portlet__body">
                    <form asp-route="Add" method="post">

                        <div class="form-group m-form__group">
                            <label>Key</label>
                            <input type="text" asp-for="AddPropertyDto.Key" class="form-control m-input">
                            <span asp-validation-for="AddPropertyDto.Key"></span>
                        </div> <div class="form-group m-form__group">
                            <label>Value</label>
                            <textarea asp-for="AddPropertyDto.Value" rows="3" cols="40" class="form-control m-input"></textarea>
                        </div>
                        <div class="kt-portlet__foot kt-portlet__foot--fit py-2">
                            <div class="kt-form__actions py-2">
                                <button id="btnSubmit" type="submit" class="btn btn-success">Add New Property</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>